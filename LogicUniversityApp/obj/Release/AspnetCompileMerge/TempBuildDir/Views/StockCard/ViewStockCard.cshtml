@model IEnumerable<LogicUniversityApp.ViewModel.InventoryViewModel>

@{
    ViewBag.Title = "ViewStockCard";
}
<h2>STOCK CARD</h2>

<script type="text/javascript">
    function SelectedIndexChanged() {
        var e = document.getElementById("categoryList");
        var selectedCategory = e.options[e.selectedIndex].value;
        var myURL = window.location.origin + window.location.pathname

        window.location.href = '@Url.Action("ViewStockCard", "StockCard")' + '?category=' + selectedCategory;
    }
</script>

@using (Html.BeginForm())
{
    @Html.DropDownList("categoryList", null, "All", new { Class = "form-control", onchange = "SelectedIndexChanged()" })
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.itemNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.balance)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.itemNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.balance)
            </td>
            <td>
                @Html.ActionLink("Select", "Index", "StockCard", new { id = item.itemNo }, null)
            </td>
        </tr>
    }

</table>

